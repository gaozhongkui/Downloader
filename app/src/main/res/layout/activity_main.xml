<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#66000000" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="@dimen/dp_0"
        app:itemBackground="@android:color/transparent"
        app:itemPaddingTop="4dp"
        app:itemRippleColor="@null"
        app:itemTextAppearanceActive="@style/BottomNavigation_active"
        app:itemTextAppearanceInactive="@style/BottomNavigation_unactive"
        app:itemTextColor="@color/text_home_tab_title_style"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/home_menu_bottom_navigation" />
</LinearLayout>